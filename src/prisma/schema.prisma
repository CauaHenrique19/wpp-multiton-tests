datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Client {
  id        Int      @id @default(autoincrement())
  name      String
  status    Int
  createdAt DateTime @default(now())

  users User[]

  @@map("tb_client")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  last_name String
  password  String
  admin     Boolean  @default(false)
  client_id Int
  status    Int
  createdAt DateTime @default(now())

  client Client @relation(fields: [client_id], references: [id])

  @@map("tb_user")
}
